@{
}
@model List<CRUD_Clientes.Models.Empleado>;
<body class="bg-secondary">
    <div class="row bg-dark text-white">
        <div class="col-sm-8 offset-sm-2">
            <h2>Lista Empleado</h2>
            <a asp-controller="Empleado" asp-action="Nuevo" class="btn btn-success mb-3">Nuevo</a>
            <table class="table table-bordered">
                <thead>
                    <tr class="text-white">
                        <th>Id</th>
                        <th>Nombre completo</th>
                        <th>Correo</th>
                        <th>Fecha de contrato</th>
                        <th>Activo</th>
                        <th></th>
                    </tr>
                </thead>
                <thbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-white">
                            <td>@item.IdEmpleado</td>
                            <td>@item.NomvbreCompleto</td>
                            <td>@item.Correo</td>
                            <td>@item.FechaContrato.ToString("dd/MM/yyyy")</td>
                            <td>@(item.Activo ? "Si" : "No")</td>
                            <td>
                                <a asp-controller="Empleado" 
                                asp-action="Editar"
                                asp-route-id="@item.IdEmpleado"
                                class="btn btn-primary mb-2">Editar</a>
                            </td>
                            <td>
                                <a asp-controller="Empleado"
                                   asp-action="Eliminar"
                                   asp-route-id="@item.IdEmpleado"
                                   onclick="return confirmar()"
                                   class="btn btn-danger mb-2">Eliminar</a>
                            </td>

                        </tr>
                    }
                </thbody>

            </table>

        </div>

    </div>
</body>

@section Scripts{
    <script>
        function confirmar() {
            return confirm("Desea eliminar al empleado?");
        }
    </script>
}
